<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Image:</strong>
  <%= @post.image %>
</p>

  <% if logged_in? && @post.user_id != current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除', favorite_path(post_id: @post.id, favorite_id: @favorite.id), class: "btn btn-danger", method: :delete %>
    <% else %>
      <%= link_to 'お気に入り', favorites_path(post_id: @post.id), class: "btn btn-primary", method: :post %>
    <% end %>
  <% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
